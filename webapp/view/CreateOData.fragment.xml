<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core='sap.ui.core'
>
    <Dialog
        class="sapUiResponsivePadding"
        id='createOData'
        title="Add Employee"
        contentWidth="300px"
        draggable="true"
        resizable="true"
    >
        <VBox class="sapUiSmallMargin">
            <Label text='First Name' />
            <Input id="firstNameInput" placeholder="Enter First Name" type='Text' />

            <Label text='Last Name' />
            <Input id="lastNameInput" placeholder="Enter Last Name" type='Text' />
        </VBox>

        <endButton>
            <Button
                text="Cancel"
                press="onCancelPress"
            />
        </endButton>

        <beginButton>
            <Button
                text="Submit"
                icon="sap-icon://save"
                press="onSubmit"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
